{
  "name": "vuepress-paper",
  "description": "Fetch and transform content from Dropbox Paper for Vuepress.",
  "version": "1.0.0",
  "main": "src/main.js",
  "files": [
    "src/*.js",
    "!src/*.test.js",
    "src/*.vue"
  ],
  "scripts": {
    "test": "ava ./src/*.test.js",
    "test:ci": "npm run test && npm run lint -- --max-warnings 0",
    "test:watch": "npm run test -- --watch",
    "docs:content": "node ./src/fetch-papers.js",
    "lint": "eslint ./src/*.js"
  },
  "dependencies": {
    "@vuepress/plugin-register-components": "^1.4.0",
    "case-it": "^1.0.1",
    "got": "^9.6.0",
    "markdown-it-for-inline": "^0.1.1",
    "promise-all-props": "^1.0.1",
    "sanctuary": "^3.0.0"
  },
  "devDependencies": {
    "ava": "^3.5.0",
    "eslint": "^6.6.0"
  },
  "engines": {
    "node": ">= 12"
  },
  "eslintConfig": {
    "env": {
      "es6": true,
      "node": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
      "ecmaVersion": 2018
    },
    "rules": {
      "indent": [
        "warn",
        2
      ],
      "no-console": [
        1,
        {
          "allow": [
            "info",
            "error"
          ]
        }
      ],
      "no-unexpected-multiline": "off",
      "semi": "warn"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/voorhoede/vuepress-paper.git"
  },
  "author": "Selwyn <talk@selwyn.cc> (https://selwyn.cc/)",
  "license": "MIT",
  "keywords": [
    "dropbox",
    "dropbox paper",
    "vuepress cms"
  ]
}
